<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textAlignment="textEnd"
        android:background="@android:color/darker_gray"
        android:textColor="#FF50CE6C"
        android:textStyle="bold"
        android:textSize="85dp" />

    <Button

        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="1"
        android:id="@+id/button"
        android:shadowRadius="5"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="2"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/button16" />

    <Button
        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="3"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignStart="@+id/button7" />

    <Button

        android:background="#7FFFD4"
        android:layout_width="@dimen/dimensiones_boton_operandos_width"
        android:layout_height="@dimen/dimensiones_boton_operandos_height"
        android:text="+"
        android:id="@+id/button4"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/button8" />

    <Button
        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="4"
        android:id="@+id/button5"
        android:layout_above="@+id/button9"
        android:layout_toStartOf="@+id/button17" />

    <Button
        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="5"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button7"
        android:layout_toStartOf="@+id/button7" />

    <Button
        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="6"
        android:id="@+id/button7"
        android:layout_above="@+id/button10"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:background="#7FFFD4"
        android:layout_width="@dimen/dimensiones_boton_operandos_width"
        android:layout_height="@dimen/dimensiones_boton_operandos_height"
        android:text="-"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button22"
        android:layout_toStartOf="@+id/button15" />

    <Button
        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="7"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button10"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="8"
        android:id="@+id/button10"
        android:layout_above="@+id/button14"
        android:layout_toStartOf="@+id/button11" />

    <Button
        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="9"
        android:id="@+id/button11"
        android:layout_alignTop="@+id/button10"
        android:layout_alignStart="@+id/button7" />

    <Button
        android:background="#7FFFD4"
        android:layout_width="@dimen/dimensiones_boton_operandos_width"
        android:layout_height="@dimen/dimensiones_boton_operandos_height"
        android:text="*"
        android:id="@+id/button12"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignStart="@+id/button8" />



    <Button
        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="0"
        android:id="@+id/button14"
        android:layout_alignTop="@+id/button20"
        android:layout_alignStart="@+id/button10"
        android:layout_alignEnd="@+id/button11" />

    <Button
        android:layout_width="wrap_content"
        android:background="#7FFFD4"

        android:layout_height="@dimen/dimensiones_boton_operandos_height"
        android:text="="
        android:id="@+id/button13"
        android:layout_alignBottom="@+id/button14"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button12" />

    <Button
        android:background="#7FFFD4"
        android:layout_width="@dimen/dimensiones_boton_operandos_width"
        android:layout_height="@dimen/dimensiones_boton_operandos_height"
        android:text="/"
        android:id="@+id/button15"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@drawable/mimascaraboton"
        style="?android:attr/buttonStyleSmall"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="C"
        android:id="@+id/button16"
        android:textColor="#FFF"
        android:textSize="35dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/mimascaraboton"
        android:layout_marginRight="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="M+"
        android:id="@+id/button17"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button16"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:background="@drawable/mimascaraboton"
        android:layout_marginRight="5dp"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="M-"
        android:id="@+id/button18"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_alignTop="@+id/button17"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:background="@drawable/mimascaraboton"
        android:layout_marginRight="5dp"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="MR"
        android:id="@+id/button19"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_alignTop="@+id/button18"
        android:layout_alignStart="@+id/button4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/dimensiones_boton_width"
        android:layout_height="@dimen/dimensiones_boton_height"
        android:text="."
        android:id="@+id/button20"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <Button
        android:background="@drawable/mimascaraboton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="MC"
        android:id="@+id/button21"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button19"
        android:layout_alignEnd="@+id/button15" />

    <Button

        android:background="#7FFFD4"
        android:layout_width="@dimen/dimensiones_boton_operandos_width"
        android:layout_height="@dimen/dimensiones_boton_operandos_height"
        android:text="+/-"
        android:id="@+id/button22"
        android:layout_above="@+id/button11"
        android:layout_alignStart="@+id/button23" />

    <Button

        android:background="#7FFFD4"
        android:layout_width="@dimen/dimensiones_boton_operandos_width"
        android:layout_height="@dimen/dimensiones_boton_operandos_height"
        android:text="SQRT"
        android:id="@+id/button23"
        android:layout_above="@+id/button14"
        android:layout_alignEnd="@+id/button13" />

</RelativeLayout>
